@model IEnumerable<ABCRetailers.Models.Order>

@{
    ViewData["Title"] = "Orders";
}

<div class="container my-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="fas fa-file-invoice-dollar"></i> Manage Orders</h2>
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus"></i> Create New Order
        </a>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <table class="table table-hover">
                <thead class="table-light">
                    <tr>
                        <th>Order Number</th>
                        <th>Customer</th>
                        <th>Date</th>
                        <th>Status</th>
                        <th class="text-end">Total</th>
                        <th class="text-center">Items</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="align-middle">
                                <strong>@Html.DisplayFor(modelItem => item.OrderNumber)</strong>
                            </td>
                            <td class="align-middle">@Html.DisplayFor(modelItem => item.CustomerName)</td>
                            <td class="align-middle">@item.OrderDate.ToShortDateString()</td>
                            <td class="align-middle">
                                <span class="badge
                                          @(item.Status == "Pending" ? "bg-warning text-dark" :
                                                                              item.Status == "Shipped" ? "bg-info text-dark" :
                                                                              item.Status == "Delivered" ? "bg-success" :
                                                                              item.Status == "Cancelled" ? "bg-danger" : "bg-secondary")">
                                @Html.DisplayFor(modelItem => item.Status)
                            </span>
                        </td>
                        <td class="align-middle text-end">@item.TotalAmount.ToString("C")</td>
                        <td class="align-middle text-center">@item.OrderItems.Sum(oi => oi.Quantity)</td>
                        <td class="text-end align-middle">
                            <a asp-action="Edit" asp-route-id="@item.OrderId" class="btn btn-sm btn-outline-secondary" title="Edit Status">
                                <i class="fas fa-truck"></i>
                            </a>
                            <a asp-action="Details" asp-route-id="@item.OrderId" class="btn btn-sm btn-outline-info" title="Details">
                                <i class="fas fa-eye"></i>
                            </a>
                        </td>
                    </tr>
                                        }
                </tbody>
            </table>
        </div>
    </div>
</div>